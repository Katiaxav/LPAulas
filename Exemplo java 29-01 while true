import java.util.Scanner;
public class Atividadejava {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        while (true){
            System.out.println("Digite um numero positivo.");
            int num2 = sc.nextInt();
            if (num2 < 0){
                System.out.println("O numero invalido.\n");
            }


        }

    }
}
