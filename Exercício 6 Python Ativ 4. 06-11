num1 = int (input ("Digite o primeiro numero:"))
num2 = int (input ("Digite o segundo numero:"))
num3 = int (input ("Digite o terceiro numero:"))
num4 = int (input ("Digite o quarto numero:")) 

if num1 > num2 and num1 > num3 and num1 > num4:
   print (" O maior numero entre eles é:", num1)
if num2 > num1 and num2 > num3 and num2 > num4:
   print (" O maior numero entre eles é:", num2)
if num3 > num1 and num3 > num2 and num3 > num4:
   print (" O maior numero entre eles é:", num3)
if num4 > num1 and num1 > num2 and num4 > num3:
   print (" O maior numero entre eles é:", num4)
