while True:
    Nome = input("Digite o nome do produto:")
    preco = float(input("Digite o preco do produto?"))
    Qtd = int ( input("Digite a quantidade do produto."))
    pagamento = input("Digite forma de pagamento pix ou cartão?")
   
    if pagamento == "pix":
       desconto = preco * 0.15
       total = (preco * Qtd) - desconto
       print("O valor Total do Pix com desconto é:", total)
   
    elif pagamento == "cartão":
         total = preco * Qtd
         print ("O valor do cartão é:", total)
    
    continuar = input('Deseja fazer um novo login?s/n:')
    
    if continuar!='s':
        break
        # código finalizado
