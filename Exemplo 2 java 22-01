import java.util.Scanner;
public class Main {
    public static void main (String[]args){
        int idade;
        String nome;
        int num1;
        int num2;
        int soma;
        int subt;
        double multi;
        double divisao;
        double mod;

        Scanner scanner = new Scanner(System.in);
        System.out.printf("Digite sua idade");
        idade = scanner.nextInt();
        System.out.println("Digite o seu nome");
        nome = scanner.next();
        System.out.println("Sua idade é " +idade);
        System.out.println("Seu nome é " +nome);
        System.out.println("Digite um numero");
        num1 = scanner.nextInt();
        System.out.println("Digite outro numero");
        num2 = scanner.nextInt();
        soma = num1 + num2;
        System.out.println("O resultado da soma é "+ soma);
        subt = num1 - num2;
        System.out.println("O resultado da subtratação é "+ subt);
        multi= num1 * num2;
        System.out.println("O resultado da multiplicação é "+ multi);
        divisao= num1 / num2;
        System.out.println("O resultado da divisao é "+  divisao);
        mod= num1 % num2;
        System.out.println("O resultado do modulo é "+ mod);

           }
}
